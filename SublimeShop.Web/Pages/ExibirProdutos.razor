@foreach (var produto in Produtos)
{
    <div class="col-md-3 mb-2">
        <a href="/DetalhesProduto/@produto.ProdutoId">
            <div class="card">
                <img class="img-thumbnail" src="@produto.ImagemUrl">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @produto.NomeProduto
                    </h5>
                    <p class="cart-text">
                        <b>@produto.PrecoProduto.ToString("C")</b>
                    </p>
                 </div>
            </div>
        </a>
    </div>
}

@code {
    [Parameter]
    public IEnumerable<ProdutoDTO>? Produtos{ get; set; }
}
